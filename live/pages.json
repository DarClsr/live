{
	"easycom": {
		"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages

		{
			"path": "pages/index/index",
			"style": {
				"titleNView": {
					"titleAlign": "right",
					"titleText": "直播",
					"buttons": [{
						"type": "menu",
						"float": "right"
					}]
				}
			}
		}, {
			"path": "pages/user/user",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/live/live",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}

		}
        ,{
            "path" : "pages/liveroom/liveroom",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#8745ff",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar":{
		"selectedColor":"#8745FF",
		"backgroundColor":"#fff",
		"midButton":{
			"iconPath":"/static/images/discover_live.png",
			"height":"80px",
			"width":"80px",
			"text":"录制"
		},
		"list":[
			{
				"selectedIconPath":"/static/images/selectSearch.svg",
				"iconPath":"/static/images/search.svg",
				"text":"发现",
				"pagePath":"pages/index/index"
			},
			{
				"selectedIconPath":"/static/images/selectUser.svg",
				"iconPath":"/static/images/user.svg",
				"text":"我的",
				"pagePath":"pages/user/user" 
			}
		]
	}
}
